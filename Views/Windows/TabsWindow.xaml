<Window
    x:Class="mouse_tracking_web_app.Views.TabsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:mouse_tracking_web_app.Views"
    Title="TabsWindow"
    Width="800"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabs" Grid.Column="0">
            <TabItem Header="Videos">
                <uc:UploadVideoTab />
            </TabItem>
            <TabItem Header="Analyze">
                <uc:AnalysisTab />
            </TabItem>
            <TabItem Header="Export" />
        </TabControl>
        <TextBlock
            Grid.Column="1"
            Margin="2,10,0,0"
            Text="here there would be a file explorer" />
    </Grid>
</Window>