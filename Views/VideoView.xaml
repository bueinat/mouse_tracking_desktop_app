    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="5"
            Padding="5"
            Header="Upload and Process Video">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2.5*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="BtnUploadsVideo"
                    Grid.Row="0"
                    Grid.Column="0"
                    Height="22"
                    Margin="5,5"
                    Background="#FFD6EBF2"
                    Click="UploadVideoButtonClicked"
                    Content="Upload" />
                <TextBox
                    x:Name="videoName"
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="0"
                    Height="22"
                    Margin="0,0"
                    IsReadOnly="True"
                    Text="{Binding VM_VideoName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    x:Name="videoName1"
                    Grid.Row="0"
                    Grid.Column="1"
                    Height="22"
                    Margin="5,5"
                    IsReadOnly="True" />
                <Button
                    x:Name="BtnProcessVideo"
                    Grid.Row="1"
                    Grid.ColumnSpan="2"
                    Width="80"
                    Height="22"
                    Background="#FFCBEAD7"
                    Click="ProcessVideoButtonClicked"
                    Content="Process" />
                <fa:ImageAwesome
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Height="10"
                    Icon="CircleOutlineNotch"
                    Spin="True"
                    Visibility="{Binding VM_IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    Foreground="DarkRed"
                    Text="{Binding VM_ErrorMessage}"
                    TextWrapping="Wrap"
                    Visibility="{Binding VM_HasErrorMessage, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Padding="5"
            Header="Show Video">
            <StackPanel Orientation="Vertical">
                <Border>
                    <Image Source="{Binding VM_FramePath}" />
                </Border>
                <StackPanel Orientation="Horizontal">
                    <!--<Slider
                        x:Name="VideoTimeController"
                        Width="150"
                        Maximum="200"
                        Minimum="0"
                        Orientation="Horizontal"
                        Value="50" />-->

                    <Slider
                        x:Name="VideoTimeController"
                        Width="200"
                        VerticalAlignment="Center"
                        Maximum="200"
                        Minimum="0"
                        Style="{StaticResource ResourceKey=Horizontal_Slider}"
                        Value="100" />
                    <TextBlock Text="{Binding ElementName=VideoTimeController, Path=Value}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
