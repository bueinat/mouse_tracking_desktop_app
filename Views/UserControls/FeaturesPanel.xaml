<UserControl
    x:Class="mouse_tracking_web_app.Views.FeaturesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:mouse_tracking_web_app.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:mouse_tracking_web_app.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewmodels:VideoControllerViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid x:Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#476D76"
            Text="Sniffing: " />
        <Rectangle
            Grid.Row="0"
            Grid.Column="1"
            Height="20"
            Margin="5,5"
            Fill="LightGray" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#476D76"
            Text="Drinking: " />
        <!--<Rectangle
            Grid.Row="1"
            Grid.Column="1"
            Height="20"
            Margin="5,5"
            Fill="LightGray" />-->
        <local:ColoredTimeBar
            Grid.Row="1"
            Grid.Column="1"
            Margin="5,5"
            FeatureName="IsDrinking"
            MaxLength="{Binding VMVC_NFrames}"
            TimesDictionary="{Binding VMVC_FeaturesTimeRanges}" />
        <!--  MaxLength="{Binding RelativeSource={x:Static RelativeSource.TemplatedParent}, Path=VMVC_NFrames}" />  -->
        <!--  TimesDictionary="{Binding VMVC_FeaturesList}" />  -->
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            FontWeight="Bold"
            Foreground="#476D76"
            Text="Nose Casting: " />
        <Rectangle
            Grid.Row="2"
            Grid.Column="1"
            Height="20"
            Margin="5,5"
            Fill="LightGray" />
    </Grid>

    <!--<Grid Margin="10">
        <DataGrid Name="dgSimple" HeadersVisibility="None" />
    </Grid>-->

    <!--<Grid
        x:Name="featuresGrid"
        local:GridHelpers.ColumnCount="2"
        local:GridHelpers.RowCount="{Binding VMVC_NFeatures}" />-->
</UserControl>
