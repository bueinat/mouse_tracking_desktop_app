<Page
    x:Class="mouse_tracking_web_app.Views.FileExplorerWrapper_"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:mouse_tracking_web_app.Views"
    xmlns:viewModels="clr-namespace:mouse_tracking_web_app.ViewModels"
    Title="FileExplorerWrapper_"
    d:DataContext="{d:DesignInstance Type=viewModels:NavigationTreeViewModel}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">


    <Grid>
        <GroupBox Header="File Explorer">
            <StackPanel>

                <Label Content="{Binding NTVM_FileExplorerDirectory}" />

                <uc:NavigationTree
                    Grid.Row="0"
                    Grid.Column="1"
                    DataContext="{Binding SingleTree}" />

            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
